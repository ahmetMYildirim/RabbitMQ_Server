<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="560.0" prefWidth="795.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.rabbitmq_server.controller.MainController">
   <children>
      <!-- Header Panel -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2E86AB; -fx-padding: 10;">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="RabbitMQ Server Manager" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="currentUserLabel" style="-fx-text-fill: white;" text="Giriş yapılmadı" />
            <Label fx:id="statusLabel" style="-fx-text-fill: white;" text="Bağlantı bekleniyor..." />
         </children>
      </HBox>

      <!-- Connection Configuration Panel -->
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #F0F0F0; -fx-padding: 12;">
         <children>
            <Label style="-fx-font-weight: bold;" text="Bağlantı:" />
            <Label text="IP:" />
            <TextField fx:id="ipAddressField" editable="false" prefHeight="25.0" prefWidth="73.0" promptText="localhost" text="localhost" />
            <Label text="Port:" />
            <TextField fx:id="portField" prefHeight="25.0" prefWidth="43.0" promptText="5672" text="5672" />
            <Label text="Management Port:" />
            <TextField fx:id="managementPortField" prefHeight="25.0" prefWidth="46.0" promptText="15672" text="15672" />
            <Label text="SSL Port:" />
            <TextField fx:id="sslPortField" prefHeight="25.0" prefWidth="47.0" promptText="5671" text="5671" />
            <Button fx:id="saveConfigButton" style="-fx-background-color: #2E86AB; -fx-text-fill: white;" text="Kaydet" />
         </children>
      </HBox>

      <!-- Login Panel -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #F6F5F5; -fx-padding: 15;">
         <children>
            <Label text="Kullanıcı Adı:" />
            <TextField fx:id="usernameField" prefWidth="120.0" promptText="guest" text="guest" />
            <Label text="Şifre:" />
            <PasswordField fx:id="passwordField" prefWidth="120.0" promptText="guest" text="guest" />
            <Button fx:id="loginButton" style="-fx-background-color: #A23B72; -fx-text-fill: white;" text="Giriş Yap" />
            <Button fx:id="logoutButton" disable="true" style="-fx-background-color: #C73E1D; -fx-text-fill: white;" text="Çıkış Yap" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="startServerButton" style="-fx-background-color: #3D8361; -fx-text-fill: white;" text="Server Başlat" />
            <Button fx:id="stopServerButton" style="-fx-background-color: #C73E1D; -fx-text-fill: white;" text="Server Durdur" />
         </children>
      </HBox>

      <!-- Main Content -->
      <TabPane fx:id="mainTabPane" disable="true" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
         <tabs>
            <!-- Users Tab -->
            <Tab text="Kullanıcı Yönetimi">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <!-- Users List -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Kullanıcılar:" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="refreshUsersButton" text="Yenile" />
                           </children>
                        </HBox>
                        <TableView fx:id="usersTable" prefHeight="200.0">
                           <columns>
                              <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Kullanıcı Adı" />
                              <TableColumn fx:id="tagsColumn" prefWidth="200.0" text="Roller" />
                              <TableColumn fx:id="logInDate" prefWidth="200.0" text="Son Giriş Tarihi" />
                              <TableColumn fx:id="logOutDate" prefWidth="200.0" text="Son Çıkış Tarihi" />
                              <TableColumn fx:id="sessionDuration" prefWidth="200.0" text="Oturum Süresi" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>

                        <!-- Create User -->
                        <VBox spacing="10.0">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Yeni Kullanıcı Oluştur:" />
                              <HBox spacing="10.0">
                                 <children>
                                    <Label text="Kullanıcı Adı:" />
                                    <TextField fx:id="newUsernameField" prefWidth="150.0" promptText="kullanıcı adı" />
                                    <Label text="Şifre:" />
                                    <PasswordField fx:id="newPasswordField" prefWidth="150.0" promptText="şifre" />
                                    <Label text="Rol:" />
                                    <ComboBox fx:id="userTypeComboBox" prefWidth="150.0" />
                                    <Button fx:id="createUserButton" style="-fx-background-color: #3D8361; -fx-text-fill: white;" text="Oluştur" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Delete User -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="deleteUserButton" style="-fx-background-color: #C73E1D; -fx-text-fill: white;" text="Seçili Kullanıcıyı Sil" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Yetki Ayarları">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <!-- Current permissions section -->
                        <VBox spacing="10.0">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Şu Anki İzinler" />
                              <TableView fx:id="currentPermissionsTable" prefHeight="120.0">
                                 <columns>
                                    <TableColumn fx:id="vhostColumn" prefWidth="100.0" text="Virtual host" />
                                    <TableColumn fx:id="configureRegexpColumn" prefWidth="150.0" text="Configure regexp" />
                                    <TableColumn fx:id="writeRegexpColumn" prefWidth="150.0" text="Write regexp" />
                                    <TableColumn fx:id="readRegexpColumn" prefWidth="150.0" text="Read regexp" />
                                    <TableColumn fx:id="actionColumn" prefWidth="80.0" text="" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>

                        <!-- Set permission section -->
                        <VBox spacing="15.0">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="İzin Ayarları" />
                              
                              <!-- Form fields -->
                              <HBox spacing="20.0">
                                 <children>
                                    <!-- Left column -->
                                    <VBox prefWidth="200.0" spacing="10.0">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                             <children>
                                                <Label prefWidth="80.0" text="Kullanıcı Adı:" />
                                                <TextField fx:id="perUserNameField" prefWidth="120.0" promptText="Kullanıcı adı girin" />
                                             </children>
                                          </HBox>
                                          
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                             <children>
                                                <Label prefWidth="80.0" text="Virtual host:" />
                                                <TextField fx:id="vHostField" editable="false" prefWidth="120.0" text="/" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Right column -->
                                    <VBox prefWidth="200.0" spacing="10.0">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                             <children>
                                                <Label prefWidth="80.0" text="Configure:" />
                                                <TextField fx:id="configureField" prefWidth="120.0" promptText=".*" />
                                             </children>
                                          </HBox>
                                          
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                             <children>
                                                <Label prefWidth="80.0" text="Write:" />
                                                <TextField fx:id="writeField" prefWidth="120.0" promptText=".*" />
                                             </children>
                                          </HBox>
                                          
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                             <children>
                                                <Label prefWidth="80.0" text="Read:" />
                                                <TextField fx:id="readField" prefWidth="120.0" promptText=".*" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <!-- Set permission button -->
                              <HBox>
                                 <children>
                                    <Button fx:id="savePermissionButton" style="-fx-background-color: #2E86AB; -fx-text-fill: white;" text="Kaydet" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
